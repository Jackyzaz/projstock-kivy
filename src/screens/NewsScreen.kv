<NewsScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(15)
        md_bg_color: 0.2, 0.2, 0.2, 1

        MDBoxLayout:
            id: stock_box
            size_hint_x: 1
            size_hint_y: 1  
            md_bg_color: 0.1, 0.1, 0.1, 1
            radius: [10, 10, 10, 10]
            elevation: 10
            orientation: "vertical"
            spacing: dp(5)
            padding: dp(15)
            minimum_height: dp(100)

            MDLabel:
                text: "News"
                font_style: "H1"
                halign: "left"
                valign: "top"
                font_size: "30sp"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                size_hint_y: 1
                adaptive_height: True
                
            
            MDLabel:
                text: datetime.today().strftime('%d %B') 
                font_style: "H6"
                halign: "left"
                valign: "top"
                font_size: "35sp"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                size_hint_y: 1
                adaptive_height: True

            MDBoxLayout:
                md_bg_color: 1, 1, 1, 1
                size_hint_y: None
                height: self.minimum_height + 1

            #SECTION: Stock Infomation
            MDBoxLayout:
                orientation: "vertical"
                padding_vertical: dp(20)
                spacing: dp(5)
                MDBoxLayout:
                    spacing: dp(10)
                    MDLabel:
                        text: "STOCK NAME"
                        font_style: "H6"
                        font_size: "30sp"
                        adaptive_size: True
                    MDLabel:
                        text: "STOCK FULL NAME LOREM IPSUM"
                        font_style: "H3"
                        font_size: "25sp"
                        adaptive_size: True
                
                MDBoxLayout:
                    adaptive_height: True
                    spacing: dp(15)
                    MDLabel:
                        text: "10,021.42"
                        font_style: "H6"
                        font_size: "25sp"
                        size_hint_x: None
                        adaptive_size: True
                    MDLabel:
                        text: "-123.10"
                        font_style: "H6"
                        font_size: "23sp"
                        theme_text_color: "Custom"
                        text_color: 1, 0.2, 0.3, 1
                        adaptive_size: True
                MDLabel:
                    text: "Market Closing"
                    font_style: "H6"
                    font_size: "15sp"
                    adaptive_size: True
                MDLabel:
            #/SECTION: Stock Infomation

            #SECTION: News
            MDGridLayout:
                id: news_grid
                cols: 2
                spacing: [10,70]
                #SECTION: News Cards
                # NewCard:
                # NewCard:
                # NewCard:
                # NewCard:
                #/SECTION: News Cards
                
               
                
            MDLabel:
                adaptive_size:True

