MDBoxLayout:

    MDNavigationRail:
        MDNavigationRailFabButton:
            # text: "STOCK APP"
            icon: "finance"
            on_release: app.switch_screen("home")


        MDNavigationRailItem:
            text: "Home"
            icon: "home"
            on_release: app.switch_screen("home")

        MDNavigationRailItem:
            text: "News"
            icon: "newspaper"
            on_release: app.switch_screen("news")


        MDNavigationRailItem:
            text: "Search"
            icon: "magnify"
            on_release: app.switch_screen("search")



    MDScreenManager:
        id: screen_manager

        HomeScreen:
            name: "home"
        
        SearchScreen:
            name: "search"

        NewsScreen:
            name: "news"

