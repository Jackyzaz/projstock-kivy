<SearchScreen>:
    orientation: "vertical"
    padding: "20dp"
    spacing: "20dp"

    MDTextField:
        id: search_input
        hint_text: "Enter stock symbol or company name (e.g., AAPL or Apple)"
        helper_text: "Type to see suggestions"
        helper_text_mode: "persistent"
        size_hint_y: None
        height: "48dp"
        pos_hint: {'top': 1}

    MDRaisedButton:
        text: "Fetch Data"
        md_bg_color: 1, 0.34, 0.13, 1
        on_press: root.fetch_data(self)
        size_hint_y=None
        height: "48dp"  

    Widget:
        id: chart_placeholder
        size_hint_y: 1