MDScreen:
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(15)
        spacing: dp(15)
        md_bg_color: 0.3, 0.3, 0.3, 1

        # ส่วน Header + ข่าว
        MDBoxLayout:
            size_hint_y: 0.4
            spacing: dp(15)

            # Header Box (ด้านซ้าย)
            MDBoxLayout:
                id: stock_box
                size_hint_x: 0.3
                size_hint_y: 1  # ✅ ขยายเต็มแนวตั้ง
                md_bg_color: 0.1, 0.1, 0.1, 1
                radius: [10, 10, 10, 10]
                elevation: 10
                orientation: "vertical"
                spacing: dp(5)
                padding: dp(15)
                minimum_height: dp(100)

                MDLabel:
                    text: "Stock"
                    font_style: "Caption"
                    halign: "center"
                    font_size: "40sp"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    size_hint_y: 0.5
                    height: self.texture_size[1] + dp(10)

                MDLabel:
                    id: stock_datetime
                    text: "Updating..."
                    font_style: "H5"
                    halign: "center"
                    theme_text_color: "Hint"
                    font_size: "30sp"
                    size_hint_y: 0.6
                    height: self.texture_size[1] + dp(10)

                # MDRaisedButton:
                #     text: "Refresh"
                #     pos_hint: {"center_x": 0.5}
                #     on_release: app.refresh_data()



            # ข่าว (ด้านขวา)
            MDBoxLayout:
                id: latest_news_box
                size_hint_x: 0.7
                size_hint_y: 1  
                md_bg_color: 0.1, 0.1, 0.1, 1 
                radius: [10, 10, 10, 10]
                elevation: 10
                padding: dp(10)


        # ตารางข้อมูลหุ้น
        ScrollView:
            size_hint_y: 0.6
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            do_scroll_x: False
            do_scroll_y: False
            id: stock_table_box
            adaptive_height: True
            md_bg_color: 0.1, 0.1, 0.1, 1 
            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1 
                Rectangle:
                    pos: self.pos
                    size: self.size

