<HomeScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(15)
        spacing: dp(15)
        md_bg_color: 0.1, 0.1, 0.1, 1  # พื้นหลังสีเข้ม

        # ส่วน Header + ข่าว
        MDBoxLayout:
            size_hint_y: 0.4
            spacing: dp(15)

            # Header Box (ด้านซ้าย)
            MDBoxLayout:
                size_hint_x: 0.3
                md_bg_color: 0.3, 0.3, 0.3, 1
                radius: [10, 10, 10, 10]
                elevation: 10
                orientation: "vertical"
                MDBoxLayout:
                    size_hint_y: 0.6
                    radius: [10, 10, 0, 0]  
                    elevation: 8
                    orientation: "vertical"
                    MDLabel:
                        text: "Stock"
                        text_color: 1, 1, 1, 1
                        bold: True
                        font_style: "Display"
                        role:"small"
                        halign: "center"

                    MDLabel:
                        text: "Date ../../.."
                        halign: "center"
                        font_style: "Custom"
                        font_size: "30sp"
                        text_color: 1, 1, 1, 1

                MDBoxLayout:
                    size_hint_y: 0.4
                  

            # ข่าว (ด้านขวา)
            MDBoxLayout:
                size_hint_x: 0.7
                md_bg_color: 0.3, 0.3, 0.3, 1
                radius: [10, 10, 10, 10]
                elevation: 10
                MDLabel:
                    text: "News Section"
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1

        # ส่วนตารางหุ้น
        MDBoxLayout:
            size_hint_y: 0.6
            md_bg_color: 0.3, 0.3, 0.3, 1
            radius: [10, 10, 10, 10]
            elevation: 10
            MDLabel:
                text: "Stock Table"
                halign: "center"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
