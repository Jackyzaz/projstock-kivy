MDScreen:
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(15)
        spacing: dp(15)
        md_bg_color: 0.1, 0.1, 0.1, 1  

        # ส่วน Header + ข่าว
        MDBoxLayout:
            size_hint_y: 0.4
            spacing: dp(15)

            # Header Box (ด้านซ้าย)
            MDBoxLayout:
                size_hint_x: 0.3
                md_bg_color: 0.3, 0.3, 0.3, 1
                radius: [10, 10, 10, 10]
                elevation: 10
                orientation: "vertical"
                MDLabel:
                    text: "Stock"
                    font_style: "H5"
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1

            # ข่าว (ด้านขวา)
            MDBoxLayout:
                size_hint_x: 0.7
                md_bg_color: 0.3, 0.3, 0.3, 1
                radius: [10, 10, 10, 10]
                elevation: 10
                MDLabel:
                    text: "Latest News"
                    font_style: "H6"
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1

        # ตารางข้อมูลหุ้น
        ScrollView:
            size_hint_y: 0.6
            bar_width: dp(8)
            do_scroll_x: False
            do_scroll_y: False
            id: stock_table_box
            size_hint_x: 1
            adaptive_height: True
